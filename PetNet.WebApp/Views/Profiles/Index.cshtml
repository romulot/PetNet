@model IEnumerable<PetNet.DomainModel.Entities.Profile>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form action="~/Profiles/SearchProfileByName" method="post">
    <div class="form-group">
        <label for="email">Busca</label>
        <input type="text" class="form-control" name="profileName">
        <button type="submit" class="btn btn-default">Enviar</button>
    </div>
</form>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birthday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhotoUrl)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Birthday)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.PhotoUrl)" style="width:100px;height:auto" />
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }) | 
            @Html.ActionLink("Add as Friend", "AddFriend", new { id = item.Id })
        </td>
    </tr>
}

</table>
